<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seat_background"
    tools:context=".ui.seatselectionactivity.SeatSelectionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="9dp"
            android:text="SCREEN"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@color/screen_background"
            android:textColor="@color/white"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_screen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TableLayout
            android:id="@+id/lo_seat"
            app:layout_constraintTop_toBottomOf="@id/tv_screen"
            android:layout_width="match_parent"
            android:layout_marginTop="56dp"
            android:layout_height="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="A1"
                    style="@style/purple_seat"
                    android:id="@+id/tv_seat_a1" />

                <TextView
                    android:text="A2"
                    style="@style/purple_seat"
                    android:id="@+id/tv_seat_a2" />

                <TextView
                    android:text="A3"
                    style="@style/purple_seat"
                    android:id="@+id/tv_seat_a3" />

                <TextView
                    android:text="A4"
                    style="@style/purple_seat"
                    android:id="@+id/tv_seat_a4" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="B1"
                    style="@style/purple_seat"
                    android:id="@+id/tv_seat_b1" />

                <TextView
                    android:text="B2"
                    style="@style/purple_seat"
                    android:id="@+id/tv_seat_b2" />

                <TextView
                    android:text="B3"
                    style="@style/purple_seat"
                    android:id="@+id/tv_seat_b3" />

                <TextView
                    android:text="B4"
                    style="@style/purple_seat"
                    android:id="@+id/tv_seat_b4" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="C1"
                    style="@style/green_seat"
                    android:id="@+id/tv_seat_c1" />

                <TextView
                    android:text="C2"
                    style="@style/green_seat"
                    android:id="@+id/tv_seat_c2" />

                <TextView
                    android:text="C3"
                    style="@style/green_seat"
                    android:id="@+id/tv_seat_c3" />

                <TextView
                    android:text="C4"
                    style="@style/green_seat"
                    android:id="@+id/tv_seat_c4" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <TextView
                android:text="D1"
                style="@style/green_seat"
                android:id="@+id/tv_seat_d1" />

            <TextView
                android:text="D2"
                style="@style/green_seat"
                android:id="@+id/tv_seat_d2" />

            <TextView
                android:text="D3"
                style="@style/green_seat"
                android:id="@+id/tv_seat_d3" />

            <TextView
                android:text="D4"
                style="@style/green_seat"
                android:id="@+id/tv_seat_D4" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:text="E1"
                    style="@style/blue_seat"
                    android:id="@+id/tv_seat_e1" />

                <TextView
                    android:text="E2"
                    style="@style/blue_seat"
                    android:id="@+id/tv_seat_e2" />

                <TextView
                    android:text="E3"
                    style="@style/blue_seat"
                    android:id="@+id/tv_seat_e3" />

                <TextView
                    android:text="E4"
                    style="@style/blue_seat"
                    android:id="@+id/tv_seat_e4" />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">

        <TextView
            tools:text="해리 포터와 마법사의 돌"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textColor="@color/woowa_black"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_seat_selection_title" />

        <TextView
            tools:text="18,000원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_seat_selection_title"
            app:layout_constraintStart_toStartOf="@id/tv_seat_selection_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_seat_selection_price"
            android:textSize="18sp"
            android:textColor="@color/seat_price"
            android:layout_marginBottom="20dp" />


        <Button
            android:text="확인"
            android:background="@color/inactivate_button"
            android:layout_width="88dp"
            android:layout_height="0dp"
            android:id="@+id/btn_seat_selection"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>